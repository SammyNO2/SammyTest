@model IEnumerable<CovidPayTracking.Models.PayDecisionViewModel>


@{
    ViewBag.Title = "ViewPayDecisions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pay Decisions</h2>


<table id="payDecisionList" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayDecisionDt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayDecisionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockedIn_ClearedToWork_Dt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STDPayHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STDHoursPaidByNSHGross)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PTOAdjustment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReverseRegHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayDecisionDt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayDecisionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClockedIn_ClearedToWork_Dt)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.STDPayHours)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.STDHoursPaidByNSHGross)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PTOAdjustment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReverseRegHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "PayDecisions", new { id = item.ID })|
                @Html.ActionLink("Details", "Details", "PayDecisions", new { id = item.ID })
            </td>
        </tr>
        }
    </tbody>

</table>
<div>
   <div class="=row">
       <div class="col-sm-4">
           @Html.ActionLink("Add New", "Create", "PayDecisions")
       </div>
   </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $('#payDecisionList').DataTable({
                "ordering" : true,
                columnDefs: [{
                    orderable : false, targets: [9]
                }]
            }
            );
        });




            function ConfirmCancel() {
                if (confirm('Are you sure you want to cancel this request?')) {
                    return true;
                }
                return false;
            }
    </script>
}

